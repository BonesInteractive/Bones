using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.AI;

public class EnemyController : MonoBehaviour
{
    public float lookRadius = 10f;

    Transform target;
    NavMeshAgent agent;

    // Start is called before the first frame update
    void Start()
    {
        target = PlayerManager.instance.player.transform;
        agent = GetComponent<NavMeshAgent>();
    }

    void Update()
    {
        float distance = Vector3.Distance(target.position, transform.position);

        if(distance <= lookRadius)
        {
            agent.SetDestination(target.position);  //Enemy chasing player, the character destination

            if (distance <= agent.stoppingDistance)
            {    
                //Attack the target
                //Face the target
                FaceTarget();

                //Put code here for randomized action or disappear and come back

            }
            //if(distance <= lookRadius)
            //    if(insideRadius)
            //{
            //    //GetComponent<AudioSource>().PlayOneShot(EnemyTheme, 1);
            //}
            //if(distance >= lookRadius)
            //    if(outsideRadius)
            //{
            //    //GetComponent<AudioSource>().PlayOneShot(EnemyTheme, 0);
            //}
        }
    }

    void FaceTarget()
    {
        //GetComponent<AudioSource>().PlayOneShot(EnemyTheme, .07f); // need to move this somewhere else
        Vector3 direction = (target.position - transform.position).normalized;
        Quaternion lookRotation = Quaternion.LookRotation(new Vector3(direction.x, 0, direction.z));
        //Smoothly Rotate here
        transform.rotation = Quaternion.Slerp(transform.rotation, lookRotation, Time.deltaTime * 5f);
    }


    void OnDrawGizmosSelected()
    {
        Gizmos.color = Color.red;
        Gizmos.DrawWireSphere(transform.position, lookRadius);
    }

}
