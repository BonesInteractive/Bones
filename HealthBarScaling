using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;
using UnityEngine.SceneManagement;

public class HealthBar : MonoBehaviour
{
    public GameObject player1;
    public Image currentHealthbar;

    private bool deathAnimationStarted = false;

    public string levelToLoad;

    private float hitpoint = 150;
    private float maxHitpoint = 150;

    public GameObject my_script;
    public string stopThirdPersonUserControlScript; // your second script, stop this script (stop player)

    public AudioClip femaleDeath;

    private void Start()
    {
        UpdateHealthbar();
    }

    private void UpdateHealthbar() //the most important one in this script
    {
        float ratio = hitpoint / maxHitpoint;
        currentHealthbar.rectTransform.localScale = new Vector3(ratio, 1, 1); //just like that already scaled the health bard
    }

    private void TakeDamage(float damage)
    {

        hitpoint -= damage;
        if(hitpoint < 0 && !deathAnimationStarted)
        {
            hitpoint = 0; //means we are pretty much dead

            deathAnimationStarted = true;
            StartCoroutine(DeathAnimation()); //start wait cycle and then game over screen

            GetComponent<AudioSource>().PlayOneShot(femaleDeath, 1);
            (my_script.GetComponent(stopThirdPersonUserControlScript) as MonoBehaviour).enabled = false;
            player1.GetComponent<Animator>().Play("Death"); //will play once reached to zero health
        }

        UpdateHealthbar();
    }

    IEnumerator DeathAnimation()
    {
        while (true)
        {       
            yield return new WaitForSeconds(5f);

            SceneManager.LoadScene(levelToLoad);

            yield return null; // stops coroutine from running again
        }
    }

    private void HealDamage(float heal)
    {
        hitpoint += heal;
        if (hitpoint > maxHitpoint)
            hitpoint = maxHitpoint;

        UpdateHealthbar();

    }




}
